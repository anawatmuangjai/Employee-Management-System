@model DepartmentViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<!-- content -->
<div id="content">

    @if (Model.Departments.Any())
    {
        <div class="container-fluid content-inner">

            <h2>Department List</h2>

            <table class="table table-bordered table-responsive table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Department Name</th>
                        <th>Department Code</th>
                        <th>Department Group</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var d in Model.Departments)
                    {

                        <tr>
                            <td>@d.DepartmentId</td>
                            <td>@d.DepartmentName</td>
                            <td>@d.DepartmentCode</td>
                            <td>@d.DepartmentGroup</td>
                            <td>
                                <a asp-action="Edit" class="btn btn-info">Edit</a>
                                <a asp-action="Delete" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>

            <a asp-action="Create" class="btn btn-primary pull-left">New Department</a>

        </div>
    }

</div>
