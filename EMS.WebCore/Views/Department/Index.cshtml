@model DepartmentViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<!-- content -->
<section>
    <div id="content">
        <div class="container-fluid content-inner">

            @if (Model.Departments.Any())
            {
                <h3>Department List</h3>

                <table class="table table-striped table-bordered table-responsive table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Department Name</th>
                            <th>Department Code</th>
                            <th>Department Group</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var d in Model.Departments)
                        {

                            <tr>
                                <td>@d.DepartmentId</td>
                                <td>@d.DepartmentName</td>
                                <td>@d.DepartmentCode</td>
                                <td>@d.DepartmentGroup</td>
                                <td>
                                    <a asp-action="Edit" class="btn btn-info btn-sm">Edit</a>
                                    <a asp-action="Delete" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>

                <a asp-action="Create" class="btn btn-primary pull-left">New Department</a>
            }

        </div>
    </div>
</section>

