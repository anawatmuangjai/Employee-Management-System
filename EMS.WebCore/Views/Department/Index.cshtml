@model DepartmentViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<!-- content -->
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
    <h1 class="h2">Department List</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group mr-2">
            <a class="btn btn-sm btn-outline-secondary" asp-action="Create">Create</a>
            <button class="btn btn-sm btn-outline-secondary">Share</button>
            <button class="btn btn-sm btn-outline-secondary">Export</button>
        </div>
        <button class="btn btn-sm btn-outline-secondary dropdown-toggle">
            <span data-feather="calendar"></span>
            This week
        </button>
    </div>
</div>

@if (Model.Departments.Any())
{
    <table class="table table-striped table-hover table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Department Name</th>
                <th>Department Code</th>
                <th>Department Group</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var d in Model.Departments)
            {

                <tr>
                    <td>@d.DepartmentId</td>
                    <td>@d.DepartmentName</td>
                    <td>@d.DepartmentCode</td>
                    <td>@d.DepartmentGroup</td>
                    <td>
                        <a asp-action="Edit" class="btn btn-info btn-sm">Edit</a>
                        <a asp-action="Delete" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
}