@model DepartmentEditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Edit Department</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group mr-2">
            <a asp-controller="Department" asp-action="Index" class="btn btn-sm btn-outline-secondary">View</a>
        </div>
    </div>
</div>

<form asp-action="Edit" method="post" class="form-horizontal" role="form">

    <input asp-for="DepartmentId" type="hidden" />
    <div class="form-group row">
        <label asp-for="DepartmentName" class="col-lg-3 col-form-label form-control-label">Department Name</label>
        <div class="col-lg-9">
            <input asp-for="DepartmentName" class="form-control" placeholder="Department Name" />
            <span asp-validation-for="DepartmentName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="DepartmentCode" class="col-lg-3 col-form-label form-control-label">Department Code</label>
        <div class="col-lg-9">
            <input asp-for="DepartmentCode" class="form-control" placeholder="Department Code" />
            <span asp-validation-for="DepartmentCode" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="DepartmentGroup" class="col-lg-3 col-form-label form-control-label">Department Group</label>
        <div class="col-lg-9">
            <input asp-for="DepartmentGroup" class="form-control" placeholder="Department Group" />
            <span asp-validation-for="DepartmentGroup" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-lg-3 col-form-label form-control-label"></label>
        <div class="col-lg-9">
            <input type="reset" class="btn btn-secondary" value="Cancel">
            <input type="submit" class="btn btn-primary" value="Save Changes">
        </div>
    </div>

</form>