@model DepartmentEditModel

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid">

    <div id="content">

        <div class="content-inner">

            <h2>Add New Department</h2>

            <hr />

            <form asp-action="Create" method="post" class="form-horizontal" role="form">

                <div class="form-group">
                    <label asp-for="DepartmentName" class="control-label col-sm-2">Department Name</label>
                    <div class="col-sm-10">
                        <input asp-for="DepartmentName" class="form-control" placeholder="Department Name" />
                        <span asp-validation-for="DepartmentName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="DepartmentCode" class="control-label col-sm-2">Department Code</label>
                    <div class="col-sm-10">
                        <input asp-for="DepartmentCode" class="form-control" placeholder="Department Code" />
                        <span asp-validation-for="DepartmentCode" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="DepartmentGroup" class="control-label col-sm-2">Department Group</label>
                    <div class="col-sm-10">
                        <input asp-for="DepartmentGroup" class="form-control" placeholder="Department Group" />
                        <span asp-validation-for="DepartmentGroup" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary pull-left">Save</button>
                    </div>
                </div>

            </form>

        </div>
    </div>
</div>


