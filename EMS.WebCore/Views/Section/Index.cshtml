@model SectionViewModel

@{
    ViewData["Title"] = "Index";
}

<!-- content -->
<section>
    <div id="content">
        <div class="container-fluid content-inner">

            @if (Model.Sections.Any())
            {
                <h3>Section List</h3>

                <table class="table table-striped table-bordered table-responsive table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Section Name</th>
                            <th>Section Code</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var s in Model.Sections)
                        {

                            <tr>
                                <td>@s.SectionId</td>
                                <td>@s.SectionName</td>
                                <td>@s.SectionCode</td>
                                <td>
                                    <a asp-action="Edit" class="btn btn-info btn-sm">Edit</a>
                                    <a asp-action="Delete" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>

                <a asp-action="Create" class="btn btn-primary pull-left">New Section</a>
            }
        </div>
    </div>
</section>
