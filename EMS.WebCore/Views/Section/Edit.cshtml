@model SectionEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="row mb-2 mt-3">
    <div class="col">
        <div class="card">
            <h5 class="card-header bg-light text-dark">Create Section</h5>
            <div class="card-body">
                <form asp-action="Edit" method="post" class="form-horizontal" role="form">
                    <input asp-for="SectionId" type="hidden" />
                    <div class="form-group">
                        <label asp-for="DepartmentId">Department</label>
                        <select asp-for="DepartmentId" asp-items="@Model.Departments" class="form-control"></select>
                        <span asp-validation-for="DepartmentId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SectionName">Section Name</label>
                        <input asp-for="SectionName" type="text" class="form-control">
                        <span asp-validation-for="SectionName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SectionCode">Section Code</label>
                        <input asp-for="SectionCode" type="text" class="form-control">
                        <span asp-validation-for="SectionCode" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>