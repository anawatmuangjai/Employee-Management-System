@model BusStationViewModel

@{
    ViewData["Title"] = "Index";
}

<section>
    <div id="content">
        <div class="container-fluid content-inner">

            @if (Model.BusStations.Any())
            {
                <h3>Department List</h3>

                <table class="table table-striped table-bordered table-responsive table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Route Name</th>
                            <th>Station Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var b in Model.BusStations)
                        {

                            <tr>
                                <td>@b.BusStationId</td>
                                <td>@b.BusStationRoute</td>
                                <td>@b.BusStationName</td>
                                <td>
                                    <a asp-action="Edit" class="btn btn-info btn-sm">Edit</a>
                                    <a asp-action="Delete" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>

                <a asp-action="Create" class="btn btn-primary pull-left">New Department</a>
            }

        </div>
    </div>
</section>