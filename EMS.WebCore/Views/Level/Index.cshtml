@model LevelViewModel

@{
    ViewData["Title"] = "Index";
}

<!-- content -->
<div id="content">

    <div class="content-inner">

        <div class="row">
            <div class="col-sm-10">
                <h2>Level List</h2>
            </div>
            <div class="col-sm-2">
                <a asp-action="Create" class="btn btn-primary pull-right">New Level</a>
            </div>
        </div>

        @if (Model.EmployeeLevels.Any())
        {
            <div class="row">

                <div class="content-inner">
                    <table class="table table-bordered table-responsive table-hover">
                        <tr>
                            <th>Level ID</th>
                            <th>Level Name</th>
                            <th>Level Code</th>
                        </tr>
                        @foreach (var lv in Model.EmployeeLevels)
                        {

                            <tr>
                                <td>@lv.LevelId</td>
                                <td>@lv.LevelName</td>
                                <td>@lv.LevelCode</td>
                            </tr>

                        }
                    </table>
                </div>
            </div>
        }
    </div>
</div>

