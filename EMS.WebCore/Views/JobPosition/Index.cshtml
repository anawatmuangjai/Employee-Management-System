@model JobViewModel

@{
    ViewData["Title"] = "Index";
}

<!-- content -->
<div class="container-fluid">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
        <h1 class="h2">Job Position Configuration</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group mr-2">
                <a class="btn btn-sm btn-outline-secondary" asp-action="Create">Create</a>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col">
            @if (Model.JobTitles.Any())
            {
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Position Name</th>
                            <th>Position Code</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.JobTitles)
                        {

                            <tr>
                                <td>@item.PositionId</td>
                                <td>@item.PositionName</td>
                                <td>@item.PositionCode</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.PositionId" class="btn btn-info btn-sm">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.PositionId" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>