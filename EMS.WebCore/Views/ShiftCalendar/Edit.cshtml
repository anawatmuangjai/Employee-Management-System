@model ShiftCalendarEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid">
    <div class="row my-5">
        <div class="col">
            <div class="card">
                <h5 class="card-header bg-light text-dark">Create Work Shift</h5>
                <div class="card-body">
                    <form asp-action="Edit" method="post" class="form-horizontal" role="form">
                        <input asp-for="WorkDate" type="hidden" />
                        <div class="form-group">
                            <label asp-for="WorkType">Work Type</label>
                            <select asp-for="WorkType" class="custom-select d-block w-100" required>
                                <option value="">Choose...</option>
                                <option value="N">Normal</option>
                                <option value="O">Overtime</option>
                            </select>
                            <span asp-validation-for="WorkType" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ShiftId">Shift</label>
                            <select asp-for="ShiftId" asp-items="@Model.Shifts" class="form-control"></select>
                            <span asp-validation-for="ShiftId" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {

    <script>
        $('#datepicker').datepicker({
            format: 'yyyy/mm/dd',
            autoclose: true,
        });
    </script>
}