@model JobViewModel

@{
    ViewData["Title"] = "Index";
}

<!-- content -->
<div id="content">

    <div class="content-inner">

        <div class="row">
            <div class="col-sm-10">
                <h2>Job List</h2>
            </div>
            <div class="col-sm-2">
                <a asp-action="Create" class="btn btn-primary pull-right">New Job Title</a>
            </div>
        </div>

        @if (Model.JobTitles.Any())
        {
            <div class="row">

                <div class="content-inner">
                    <table class="table table-bordered table-responsive table-hover">
                        <tr>
                            <th>Job ID</th>
                            <th>Job Title</th>
                            <th>Job Description</th>
                        </tr>
                        @foreach (var j in Model.JobTitles)
                        {

                            <tr>
                                <td>@j.JobTitleId</td>
                                <td>@j.JobTitle</td>
                                <td>@j.JobDescription</td>
                            </tr>

                        }
                    </table>
                </div>
            </div>
        }
    </div>
</div>


